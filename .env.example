DB_STRING=mongodb://
DB_NAME=auth-boilerplate

# Private key to generate jwt
# openssl rand -hex 32
JWT_TOKEN=

# SMTP
SMTP_EMAIL=
SMTP_HOST=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=

# Auth options
# Frontend url (used to build links sent by email)
PUBLIC_URL=http://localhost:5173
# Send an account activation link by email
PUBLIC_ACCOUNT_ACTIVATION=1
# Allow new account registration
PUBLIC_ALLOW_REGISTRATION=1
# Allow password reset (lost password)
PUBLIC_ALLOW_PASSWORD_RESET=1